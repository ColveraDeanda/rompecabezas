<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#eaeaea"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout2"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:background="@drawable/n1"
            android:id="@+id/button1"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n2"
            android:id="@+id/button2"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n3"
            android:id="@+id/button3"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n4"
            android:id="@+id/button4"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout3"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:background="@drawable/n5"
            android:id="@+id/button5"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n6"
            android:id="@+id/button6"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n7"
            android:id="@+id/button7"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n8"
            android:id="@+id/button8"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout6"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:background="@drawable/n9"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n10"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n11"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n12"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout4"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageButton
            android:background="@drawable/n13"
            android:id="@+id/button9"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n14"
            android:id="@+id/button10"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n15"
            android:id="@+id/button11"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
        <ImageButton
            android:background="@drawable/n16"
            android:id="@+id/button12"
            android:layout_width="@dimen/ancho"
            android:layout_height="@dimen/alto"
            android:layout_weight="1"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/spn_opciones"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.5"
        android:entries="@array/opciones">
    </Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_mezclar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="@string/lbl_mezclar"/>
        <Button
            android:id="@+id/btn_salir"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="@string/lbl_salir"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movimientos:"
        android:textSize="15pt"
        android:layout_marginTop="5pt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15pt"
        android:id="@+id/movimientos"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiempo:"
        android:textSize="15pt"
        android:layout_marginTop="5pt"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="15pt"
        android:id="@+id/tiempo"/>

    <Button
        android:id="@+id/btn_creditos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_creditos"
        android:layout_marginTop="40pt"/>

</LinearLayout>